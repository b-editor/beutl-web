# EditorConfig is awesome: https://EditorConfig.org

# This is the root EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Match TypeScript and JavaScript files
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2

# JSON files (e.g. package.json)
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.yaml]
indent_style = space
indent_size = 2

# Ignore minified files
[*.min.js]
insert_final_newline = false
